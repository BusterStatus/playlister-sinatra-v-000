<h1><%=@artist.name%></h1>

<h2>Songs</h2>

<ul>
<% @songs.each do |song| %>
  <% if song.artist_id == @artist.id %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
    <% @genre_songs << song %>
  <% end %>
<% end %>
</ul>

<h2>Genres</h2>
<ul>
<% @genre_songs.each do |song| %>
  <li><%= song.genre %></li>
<% end %>
</ul>